{
  "include": ["src/**/*", "tests/**/*"],
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node", 
    "typeRoots": ["src/types/**/*", "node_modules/@types/**/*"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false, 
    "skipLibCheck": true
  }
}